{
    "name": "omos/order-management-system",
    "description": "Order Management and Stock Tracking System",
    "type": "project",
    "version": "1.0.0",

    "require": {
        "php": "^7.4 || ^8.0",
        "vlucas/phpdotenv": "^5.4",
        "monolog/monolog": "^2.3",
        "symfony/var-dumper": "^5.3",
        "phpmailer/phpmailer": "^6.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^0.12"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "core/",
            "Config\\": "config/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests/",
        "phpcs": "phpcs --standard=PSR2 app/ core/",
        "phpstan": "phpstan analyse app core",
        "serve": "php -S localhost:8000 -t public"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}